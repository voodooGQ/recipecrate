{
  "compileOnSave": false,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "rootDirs": [ "src", "test" ],
    "sourceMap": true,
    "declaration": false,
    "removeComments": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "target": "es6",
    "typeRoots": [ "node_modules/@types", "@types" ],
    "lib": [ "es6" ]
  }
}
